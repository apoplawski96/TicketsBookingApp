<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MyTicketsFragment">

    <ScrollView android:layout_width="match_parent" android:layout_height="650dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <include layout="@layout/history_ticket"></include>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:app="http://schemas.android.com/apk/res-auto"
                         xmlns:tools="http://schemas.android.com/tools"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginHorizontal="12dp"
                         android:layout_marginVertical="5dp">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="150dp"
                                                             android:layout_marginVertical="0dp"
                                                             android:background="@mipmap/new_york"
                >


                    <TextView
                            android:text="Madrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.95" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Berlin"/>
                    <ImageView
                            android:layout_width="44dp"
                            android:layout_height="37dp" app:srcCompat="@drawable/ic_arrow_white"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.95"/>

                    <TextView
                            android:text="Lisbon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.05" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Warsaw"/>
                    <TextView
                            android:text="08/22/2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.45"
                            android:textColor="@android:color/white" android:textSize="36sp" android:textStyle="italic"/>

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:app="http://schemas.android.com/apk/res-auto"
                         xmlns:tools="http://schemas.android.com/tools" android:id="@+id/history_ticket_item"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginHorizontal="12dp"
                         android:layout_marginVertical="5dp">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="150dp"
                                                             android:layout_marginVertical="0dp"
                                                             android:background="@mipmap/bratislava"
                >


                    <TextView
                            android:text="Split"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/destinationPointTv" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.95" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Berlin"/>
                    <ImageView
                            android:layout_width="44dp"
                            android:layout_height="37dp" app:srcCompat="@drawable/ic_arrow_white"
                            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.95"/>

                    <TextView
                            android:text="Bratislava"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/fromTv" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.05" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Warsaw"/>
                    <TextView
                            android:text="30/01/2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.45"
                            android:textColor="@android:color/white" android:textSize="36sp" android:textStyle="italic"/>

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:app="http://schemas.android.com/apk/res-auto"
                         xmlns:tools="http://schemas.android.com/tools" android:id="@+id/history_ticket_item3"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginHorizontal="12dp"
                         android:layout_marginVertical="5dp">

                <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                             android:layout_height="150dp"
                                                             android:layout_marginVertical="0dp"
                                                             android:background="@mipmap/paris"
                >


                    <TextView
                            android:text="Paris"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/destinationPointTv3" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.95" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Berlin"/>
                    <ImageView
                            android:layout_width="44dp"
                            android:layout_height="37dp" app:srcCompat="@drawable/ic_arrow_white"
                            android:id="@+id/imageView53" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.95"/>

                    <TextView
                            android:text="Krakow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/fromTv3" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.97"
                            app:layout_constraintHorizontal_bias="0.05" android:textSize="30sp" android:textStyle="bold"
                            android:textColor="#ffffff" tools:text="Warsaw"/>
                    <TextView
                            android:text="24/02/2016"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView183" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.45"
                            android:textColor="@android:color/white" android:textSize="36sp" android:textStyle="italic"/>

                </android.support.constraint.ConstraintLayout>

            </FrameLayout>


        </LinearLayout>


    </ScrollView>




</FrameLayout>